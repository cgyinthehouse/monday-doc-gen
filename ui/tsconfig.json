{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "moduleDetection": "auto",
    "module": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "moduleResolution": "Bundler",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "files": [
    "src/types/graphql.d.ts"
  ],
  "include": [
    "src/**/*",
  ],
}