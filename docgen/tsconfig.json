{
	"compilerOptions": {
		"composite": true,
		"target": "es6",
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
	},
	"include": ["src/**/*", "tests/**/*"],
}